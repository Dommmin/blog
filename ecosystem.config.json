{
    "apps": [
        {
            "name": "project-name",
            "script": "./bootstrap/ssr/ssr.js",
            "interpreter": "node",
            "instances": 2,
            "exec_mode": "cluster",
            "env": {
                "NODE_ENV": "production",
                "APP_URL": "https://laravel.bieda.it"
            },
            "wait_ready": true,
            "autorestart": true,
            "max_restarts": 10,
            "watch": false,
            "error_file": "/home/deployer/laravel/shared/storage/logs/err.log",
            "out_file": "/home/deployer/laravel/shared/storage/logs/out.log",
            "log_file": "/home/deployer/laravel/shared/storage/logs/combined.log",
            "time": true
        }
    ]
}
